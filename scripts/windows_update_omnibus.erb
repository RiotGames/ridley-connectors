mkdir <%= update_dir %>

> <%= recipe_path %> (
<%= recipe_code %>
)

chef-client -v | awk '{print $2}' | awk -F \. '{print $1}' > <%= update_dir %>\version.txt
SET /p installed_major_chef_version=<<%= update_dir %>\version.txt

IF %installed_major_chef_version% LSS 11 (
  mkdir <%= tmp_cookbook_path %>
  mkdir <%= tmp_recipes_path %>
  cp <%= recipe_path %> <%= tmp_recipes_path %>
  echo cookbook_path 'C:\chef\update\cookbooks' > <%= upgrade_solo_rb_path %>
  <%= chef_solo_command %>
) else (
  <%= chef_apply_command %>
)

rm -rf <%= update_dir %>
